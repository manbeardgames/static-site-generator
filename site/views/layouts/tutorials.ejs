<%# ---------------------------------------------------------------------------------
  Name:         tutorials.ejs
  Type:         Layout
  Description:  This is the layout template used by all of the tutorial pages.
  Notes:        -   Uses the tutorial top nav instead of default
                -   Includes the tutorial sidebar section
  Last Refactored: 11/28/2018
---------------------------------------------------------------------------------  #%>
<!doctype html>
<html>

<head>
    <% include ../partials/_head %>
</head>

<body data-spy="scroll" data-target=".sidebar">
    <header>
        <% include ../partials/navs/_tutorial-top-nav %>
    </header>
    <div class="container-fluid">
        <div class="row navbar-expand-md">
            <nav class="col-md-3 col-lg-2 navbar-collapse collapse sidebar" id="sidenav">
                <div class="sidbar-sticky flex-column w-100 mt-1">
                    <% navHeaders.forEach((header, i) => { %>
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>
                            <%- header.name %></span>
                    </h6>
                    <ul class="nav flex-column">
                        <% header.subHeaders.forEach((subHeader, i) => { %>
                        <li class="nav-item">
                            <a class="nav-link active" href="/tutorials/<%- header.nameSpine %>/<%- subHeader.nameSpine %>">
                                <%- subHeader.name %>
                            </a>
                        </li>
                        <% }) %>
                    </ul>
                    <% }) %>
                </div>
            </nav>

            <main id="tutorial" role="main" class="col-md-9  col-lg-10 pt-3 px-4">
                <%- body %>
            </main>
        </div>
    </div>



    <% include ../partials/scripts/_default-scripts %>
</body>

</html>