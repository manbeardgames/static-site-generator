{
  "name": "@manbeardgames/static-site-generator",
  "version": "1.0.0",
  "description": "A static site generator used to create http://www.manbeardgames.com",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "build-site": "node ./generator/lib/index.js",
    "format": "prettier --write \"generator/src/**/*.ts\" \"generator/src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manbeardgames/static-site-generator.git"
  },
  "keywords": [
    "NPM",
    "TypeScript",
    "Static",
    "Generator"
  ],
  "author": "Christohper Whitley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manbeardgames/static-site-generator/issues"
  },
  "homepage": "https://github.com/manbeardgames/static-site-generator#readme",
  "devDependencies": {
    "@mdi/font": "^3.4.93",
    "@types/ejs": "^2.6.2",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.5",
    "@types/node": "^11.9.4",
    "@types/sass": "^1.16.0",
    "bootstrap": "^4.3.1",
    "ejs": "^2.6.1",
    "front-matter": "^3.0.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "jest": "^24.1.0",
    "jquery": "^3.3.1",
    "marked": "^0.6.1",
    "popper.js": "^1.14.7",
    "prettier": "^1.16.4",
    "prismjs": "^1.27.0",
    "sass": "^1.17.0",
    "serve": "^10.1.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "files": [
    "generator/lib/**/*"
  ],
  "dependencies": {
    "@types/glob": "^7.1.1"
  }
}
